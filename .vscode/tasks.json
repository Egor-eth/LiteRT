{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildRelease",
            "type": "shell",
            "command": "cd cmake-build-release && make -j 8",
            "group": "build"
        },
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "make -j 4",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Shaders / Renderer",
            "type": "shell",
            "command": "cd Renderer/shaders_gpu && bash build.sh",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]